<% include ../partials/_header %>

<body>
    <h4>URL Index</h4>
    <ul>
        <% for(var shortUrl in urls) { %>
        <!-- loop only the posts that match this user id -->
            <% if ( urls[shortUrl].user_id  === username ) { %>
                <li style="display:block">
                  <p style="margin-bottom:0;margin-top:10; display:inline-block;">
                   <%= shortUrl %> ‚ü∂ <a href="<%= urls[shortUrl].longUrl %>"> <%= urls[shortUrl].longUrl  %> </a> </p>
                    <form style="display:inline-block" action="/urls/<%= shortUrl %>">
                        <button class="btn btn-primary m-1" type="submit">Edit</button>
                    </form>
                    <form style="display:inline-block" method="POST" action="/urls/<%= shortUrl %>/delete">
                        <button class="btn btn-danger m-1" type="submit">Delete</button>
                    </form>
                </li>
            <% } else { %>
            <li><a href="<%= urls[shortUrl].longUrl %>"><%= shortUrl %></a> </li>
            <% }} %>
    </ul>

    <a style="margin-left: 39px" href="/urls/new">Shorten New Url</a>
</body>
</html>


